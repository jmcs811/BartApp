<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">

  <TextView
    android:id="@+id/destination_text_view"
    style="@style/TextAppearance.AppCompat.Medium"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:text="TextView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="Antioch"/>
  <TextView
    android:id="@+id/minutes_text_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:text="TextView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/destination_text_view"
    tools:text="Minutes: 9"/>
  <TextView
    android:id="@+id/platform_text_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:text="TextView"
    app:layout_constraintStart_toEndOf="@+id/minutes_text_view"
    app:layout_constraintTop_toBottomOf="@+id/destination_text_view"
    tools:text="Platform: 1"/>
  <TextView
    android:id="@+id/train_length_text_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:text="TextView"
    app:layout_constraintStart_toEndOf="@+id/platform_text_view"
    app:layout_constraintTop_toBottomOf="@+id/destination_text_view"
    tools:text="Length: 10"/>

</androidx.constraintlayout.widget.ConstraintLayout>